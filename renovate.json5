{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
  ],
  assignees: [
    'sebiklamar',
  ],
  ignorePaths: [
    '_attic/**',
  ],
  terragrunt: {
    versioning: 'regex:^((?<compatibility>.*)-v|v*)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$',
  },
  additionalBranchPrefix: '{{packageFileDir}}/',
  prBodyColumns: [
    'Package',
    'Package file',
    'Update',
    'Change',
  ],
  kustomize: {
    managerFilePatterns: [
      '/(^|/)kustomization\\.ya?ml(\\.j2)?$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)k8s/.+\\.yaml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/\\.hcl$/',
        '/\\.tf$/',
        '/\\.tftpl$/',
        '/\\.yaml$/',
        '/\\.sh$/',
      ],
      matchStrings: [
        '(?<currentValue>[\\w+\\.\\-]*)[\'",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?',
      ],
    },
  ],
  packageRules: [
    {
      matchPackageNames: [
        'docker.io/mongo',
      ],
      allowedVersions: '<=7',
      description: 'keep mongodb at v7 due to unifi-network-controller',
    },
  ],
}
